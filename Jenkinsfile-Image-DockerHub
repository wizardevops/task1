pipeline {
  agent any

  environment {
    dockerImage = ''
    registry = 'wizardevops/task1'
    registryCredential = 'dockerhub_id'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/wizardevops/task1.git']])
      }
    }
    stage('Build Docker Image') {
      steps {
        script {
          dockerImage = docker.build registry
        }
      }
    }
    stage('image to DockerHub') {
      steps {
        script {
          docker.withRegistry('', registryCredential ) {
          dockerImage.push()
          }
        }
      }
    }
    stage ('Stop Previous Container') {
      steps {
        sh 'docker ps -f name=task1 -q | xargs --no-run-if-empty docker container stop'
        sh 'docker container ls -a -f name=task1 -q | xargs -r docker container rm'
      }
    }
    stage ('Docker Run') {
      steps {
        script {
          dockerImage.run("-p 8096:5000 --rm --name task1")
        }
      }
    }
  }
}
